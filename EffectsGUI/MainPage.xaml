<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EffectsGUI.MainPage">
        <StackLayout>
            <Frame HasShadow="True"
                   BorderColor="DarkRed"
                   CornerRadius="5"
                   Margin="20"
                   HeightRequest="300"
                   HorizontalOptions="Center"
                       VerticalOptions="CenterAndExpand">
                <StackLayout>
                <Slider x:Name="decaySlider"
                    Minimum="20"
                    Value="50"
                    Maximum="1000"
                    VerticalOptions="Start" IsEnabled="True"
                    />
        <Label x:Name="decaySliderLabel"
               Text="{Binding Source={x:Reference decaySlider},
                              Path=Value,
                              StringFormat='The Slider value is {0:F0}'}"/>
        <Slider x:Name="mixSlider"
                    Minimum="20"
                    Value="50"
                    Maximum="1000"/>
        <Label x:Name="mixSliderLabel"
               Text="{Binding Source={x:Reference mixSlider},
                              Path=Value,
                              StringFormat='The Slider value is {0:F0}'}"/>
                    </StackLayout>
                </Frame>
            </StackLayout>
    </ContentPage>

