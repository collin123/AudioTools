<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="PedalBoardView"
             xmlns:viewmodel="clr-namespace:AudioToolsFrontend.ViewModel"
             x:Class="AudioToolsFrontend.PedalBoardView"
             x:DataType="viewmodel:PedalBoardViewModel"
             xmlns:templates="clr-namespace:AudioToolsFrontend">

    <ListView x:Name="lv" ItemsSource="{Binding Pedals}" SelectedItem="{Binding SelectedPedal, Mode=TwoWay}">
        <ListView.ItemTemplate>
            <templates:PedalDataTemplateSelector>
                <templates:PedalDataTemplateSelector.ReverbPedalTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding .}" />
                                <Slider Value="{Binding Path=SelectedPedal.Parameters}" Minimum="0" Maximum="1" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </templates:PedalDataTemplateSelector.ReverbPedalTemplate>
            </templates:PedalDataTemplateSelector>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>